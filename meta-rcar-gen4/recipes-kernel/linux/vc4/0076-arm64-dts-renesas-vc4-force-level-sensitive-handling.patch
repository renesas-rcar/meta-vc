From db5cf1489d2ce8cd7f620d9ba03082c4422e0bb0 Mon Sep 17 00:00:00 2001
From: Nikita Yushchenko <nikita.yoush@cogentembedded.com>
Date: Fri, 7 Jul 2023 13:34:34 +0600
Subject: [PATCH 76/92] arm64: dts: renesas: vc4: force level-sensitive
 handling of t1s interrupts

Signed-off-by: Nikita Yushchenko <nikita.yoush@cogentembedded.com>
---
 arch/arm64/boot/dts/renesas/r8a779f0-vc4-ctrl-domain.dts | 6 +++---
 1 file changed, 3 insertions(+), 3 deletions(-)

diff --git a/arch/arm64/boot/dts/renesas/r8a779f0-vc4-ctrl-domain.dts b/arch/arm64/boot/dts/renesas/r8a779f0-vc4-ctrl-domain.dts
index 4cdde0b69715..82f5ce556682 100644
--- a/arch/arm64/boot/dts/renesas/r8a779f0-vc4-ctrl-domain.dts
+++ b/arch/arm64/boot/dts/renesas/r8a779f0-vc4-ctrl-domain.dts
@@ -200,7 +200,7 @@ t1s@0 {
 		pinctrl-names = "default";
 
 		interrupt-parent = <&intswcd>;
-		interrupts = <R8A779F0_INTSWCD_INTP35>;
+		interrupts = <R8A779F0_INTSWCD_INTP35 IRQ_TYPE_LEVEL_LOW>;
 
 		tx-cut-through-mode = /bits/ 8 <0>;
 
@@ -226,7 +226,7 @@ t1s@0 {
 		pinctrl-names = "default";
 
 		interrupt-parent = <&intswcd>;
-		interrupts = <R8A779F0_INTSWCD_INTP34>;
+		interrupts = <R8A779F0_INTSWCD_INTP34 IRQ_TYPE_LEVEL_LOW>;
 
 		tx-cut-through-mode = /bits/ 8 <0>;
 
@@ -252,7 +252,7 @@ t1s@0 {
 		pinctrl-names = "default";
 
 		interrupt-parent = <&intswcd>;
-		interrupts = <R8A779F0_INTSWCD_INTP33>;
+		interrupts = <R8A779F0_INTSWCD_INTP33 IRQ_TYPE_LEVEL_LOW>;
 
 		tx-cut-through-mode = /bits/ 8 <0>;
 
